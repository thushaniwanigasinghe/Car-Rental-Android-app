<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/picture2"
    android:padding="16dp"
    tools:context=".BookingActivity">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/yellow"
        android:padding="20dp"
        android:text="BOOKING"
        android:textAlignment="center"
        android:textColor="#020E50"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/picture2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="CUSTOMER DETAILS"
            android:textColor="@color/white"
            android:background="@color/yellow1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:background="@color/blue6"
            android:textSize="24sp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/cusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ENTER THE NAME"
            android:inputType="text"
            android:background="@color/booking"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue6"
            android:paddingTop="20dp"
            android:text="ADDRESS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/cusAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ENTER THE ADDRESS"
            android:inputType="text"
            android:background="@color/booking"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="CONTACT NUMBER"
            android:textStyle="bold"
            android:background="@color/blue6"
            android:textSize="24sp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/cusContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/booking"
            android:hint="ENTER THE NUMBER"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</LinearLayout>
